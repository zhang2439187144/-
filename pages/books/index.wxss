page {
  background-color: #F0FFF0;
}

.mod-item {
  width: 95%;
  height: 412rpx;
  float: center;
  margin-left: 20rpx;
  margin-top: 40rpx;
  margin-right: -20rpx;
  background-color: #c5f0c5;
  border-radius: 10px;
  border:1px solid #000;

  
  /* box-shadow: 0rpx 0rpx 10rpx 10rpx rgba(7, 8, 8, 0.192); */
}

.mod-signup {
  position: absolute;
}

.mod-signup image {
  width: 76rpx;
  height: 42rpx;
}

.mod-img {
  width: 100%;
  height: 100%;
}

.mod-image {
  width: 100%;
  height: 480rpx;
}

.mod-title {
  font-size: 31rpx;
  font-family: '楷体';
  display: flex;
  height: 45rpx;
  margin-top: 15rpx;
  flex-direction: column;
  justify-content: center;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  overflow: hidden;
}

.mod-info {
  display: flex;
  flex-direction: column;
  height: 40rpx;
}

.mod-icon {
  display: flex;
  flex-direction: row;
  width: 40rpx;
  height: 40rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

.moinfont {
  font-size: 27rpx;
  text-indent: 60rpx;
  font-family: '楷体';
  justify-content: center;
  align-items: center;
}

.more-info {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  font-family: '楷体';
  line-height: 98rpx;
  text-indent: 30rpx;
  color: #586c94;
}

.mod-imagesize {
  display: flex;
  justify-content: center;
}

.mod-imagesize image {
  width: 100%;
  height: 300rpx;
  border-radius: 8px 8px 0px 0px;
}

.daohang_boxes {
  padding-top: 30rpx;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
}

.daohang_css {
  text-align: center;
  font-size: 30rpx;
}

.daohang_css image {
  width: 80rpx;
  height: 80rpx;
}


.Button_css::after {
  border: none;
}

.Button_css {
  /* margin-top: 100px; */
  width: 300px;
  border-radius: 30px;
  background: rgba(13, 172, 240, 0.253);
  color: white;
  padding: 0rpx 100rpx;
}

.page-bottom{
  height: 100%;
  width: 100%;
  position: absolute; 
  /* background-color: rgb(222, 226, 226); */
}
.guide-img
{
  width: 68rpx;
  height: 68rpx;
  display: flex;
  justify-content: center;
}
.page-content{
  padding-top: 200rpx;
  line-height: 200rpx;
  font-size: 43rpx;
  font-family: '楷体';
}
.page-top{
  height: 100%;
  position: absolute;
  width: 100%;
  background-color: #F0FFF0;
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.topimages{
    width: 100%;
   height: 100%;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(75%,0%); 
}
.c-state2{
  transform: rotate(0deg) scale(.8) translate(75%,0%); 
  -webkit-transform: rotate(0deg) scale(.8) translate(75%,0%); 
}
.text{
  margin: auto;
  margin-top: auto;
  margin-left: auto;
  vertical-align: middle;
  color: black;
  display: flex;
}