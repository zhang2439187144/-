page
{
  background-color: #F0FFF0;
}

.mod-item {
  width: 95%;
  height: 50%;
  float: center;
  margin-left: 20rpx;
  margin-top: 40rpx;
  margin-right: -20rpx;
  border-radius: 10px 10px 0px 0px;
}

.mod-title {
  font-size: 40rpx;
  font-family: '微软雅黑';
  height: 45rpx;
  margin-top: 50rpx;
  font-weight: bold;
}

.submit {
  margin-top: 30rpx;
  width: 40%;
  height: 100rpx;
  display: flex;
  justify-content: right;
  align-items: right;
  font-size: 10px;
  font-family: '微软雅黑';
  margin-bottom: 20rpx;
  float: left;
  margin-left: 20px;
}

.mod-info {
  display: flex;
  height: 100%;
}

.moinfont {
  font-size: 34rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-family: '微软雅黑';
  color: #000;
  justify-content: center;
  align-items: center;
}

.detail {
  font-size: 32rpx;
  text-indent: 60rpx;
  margin-bottom: 10rpx;
  margin-right: 20rpx;
  font-family: '华文行楷';
  color: #d44006fb;
  text-align: right;
}

.author {
  font-size: 20rpx;
  margin-top: 90rpx;
  font-family: '微软雅黑';
}

.mod-imagesize image {
  margin-left: 2.5%;
  width: 95%;
  height: 350rpx;
  border-radius: 20rpx;
  border:1px solid #000;
}
