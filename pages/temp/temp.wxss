.tab {
  display: flex;
  flex-direction: column;
}

.tab-nav {
  height: 80rpx;
  background: #fff;
  border-bottom: 0.5rpx dotted #ddd;
  display: flex;
  line-height: 79rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.tab-line {
  position: absolute;
  left: 0;
  bottom: -1rpx;
  height: 6rpx;
  background: #1296d2;
  transition: all 0.3s;
}

.tab-content {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
}

.detail-cont {
  width: 94%;
  margin-left: 3%;
}

